<Window x:Class="MotorRentalApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Management"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 🔹 Tiêu đề -->
        <TextBlock Text="QUẢN LÝ KHÁCH HÀNG" 
                   FontSize="22" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- 🔹 Khu vực nhập liệu và nút -->
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,50,0,10">
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Mã KH:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="txtCustomerCode" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Họ tên:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="txtFullName" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="SĐT:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPhone" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Mật khẩu:" Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPassword" Width="200"/>
            </StackPanel>

            <!-- 🔹 Các nút thao tác -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                <Button x:Name="btnAdd" Content="Thêm" Width="100" Margin="5" Click="btnAdd_Click"/>
                <Button x:Name="btnUpdate" Content="Sửa" Width="100" Margin="5" Click="btnUpdate_Click"/>
                <Button x:Name="btnDelete" Content="Xóa" Width="100" Margin="5" Click="btnDelete_Click"/>
                <Button x:Name="btnRefresh" Content="Làm mới" Width="100" Margin="5" Click="btnRefresh_Click"/>
                <Button x:Name="btnOpenMotorbike"
        Content="Quản lý xe máy"
        Width="150"
        Margin="5"
        Click="btnOpenMotorbike_Click"/>

            </StackPanel>
        </StackPanel>

        <!-- 🔹 Bảng dữ liệu -->
        <DataGrid x:Name="dgCustomers" Grid.Row="1"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="dgCustomers_SelectionChanged">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CustomerId}" Width="50"/>
                <DataGridTextColumn Header="Mã KH" Binding="{Binding CustomerCode}" Width="100"/>
                <DataGridTextColumn Header="Họ tên" Binding="{Binding FullName}" Width="200"/>
                <DataGridTextColumn Header="SĐT" Binding="{Binding Phone}" Width="120"/>
                <DataGridTextColumn Header="Mật khẩu" Binding="{Binding Password}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
