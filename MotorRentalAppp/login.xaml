<Window x:Class="MotorRentalApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Motor Rental - Login" Height="250" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Đăng nhập hệ thống" 
                   FontSize="20" FontWeight="Bold"
                   Margin="0,20,0,10" HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Margin="50">
            <Label Content="Số điện thoại:"/>
            <TextBox x:Name="txtPhone" Height="30"/>

            <Label Content="Mật khẩu:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="txtPassword" Height="30"/>

            <Button x:Name="btnLogin" 
                    Content="Đăng nhập" 
                    Margin="0,15,0,0"
                    Height="35"
                    Background="#1976D2" Foreground="White"
                    Click="btnLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>
